{
  "name": "sound-scape-explorer",
  "scripts": {
    "audio": "pnpm serve --cors -p 5531",
    "audio:front": "concurrently -P pnpm:front \"pnpm:audio {1}\" --",
    "front": "cd front && pnpm dev",
    "dev": "pnpm front",
    "dev:audio": "pnpm front:audio",
    "install:all": "pnpm i && pnpm install:front && pnpm install:processing",
    "install:front": "cd front && pnpm i && cd ..",
    "install:processing": "cd processing && pip3 install -r requirements.txt --user && cd .. && pnpm install:processing:prepare",
    "install:processing:cpu": "cd processing && pip3 install -r requirements_cpu.txt --user && cd .. && pnpm install:processing:prepare",
    "install:processing:prepare": "pnpm install:processing:deps && pnpm install:processing:dicts",
    "install:processing:deps": "pip3 install wheel soundfile --user",
    "install:processing:dicts": "python processing/dicts.py",
    "install:processing3:prepare": "pnpm install:processing:deps && pnpm install:processing3:dicts",
    "install:processing3:dicts": "python3 processing/dicts.py",
    "process": "python processing/main.py",
    "process3": "python3 processing/main.py",
    "release:prepare": "pnpm release:prepare:archive-examples",
    "release:prepare:archive-examples": "bin/archive-examples.sh",
    "start": "pnpm dev",
    "test:git:unix": "bin/test-git.sh",
    "test:git:windows": "bin/test-git.ps1",
    "test:install:unix": "pnpm test:git:unix && pnpm test:python:unix && pnpm test:nodejs:unix && pnpm test:pnpm:unix",
    "test:install:windows": "pnpm test:git:windows && pnpm test:python:windows && pnpm test:nodejs:windows && pnpm test:pnpm:windows",
    "test:nodejs:unix": "bin/test-nodejs.sh",
    "test:nodejs:windows": "bin/test-nodejs.ps1",
    "test:pnpm:unix": "bin/test-pnpm.sh",
    "test:pnpm:windows": "bin/test-pnpm.ps1",
    "test:python:unix": "bin/test-python.sh",
    "test:python:windows": "bin/test-python.ps1"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "rimraf": "^5.0.1",
    "serve": "^14.2.0"
  },
  "version": "10.3.1"
}
