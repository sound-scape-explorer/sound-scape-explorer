{
  "name": "audio",
  "private": true,
  "scripts": {
    "build": "pnpm build:clean && pnpm build:esbuild",
    "build:clean": "rimraf dist",
    "build:esbuild": "esbuild src/main.ts --bundle --minify --platform=node --target=es2019 --outfile=dist/main.js",
    "dev": "nodemon src/main.ts --exitcrash",
    "dev:node": "ts-node src/main.ts",
    "start": "node dist/main.js",
    "test:build": "pnpm build && echo 'âœ“ Build smoke test passed'"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "get-audio-duration": "^4.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "esbuild": "^0.27.2",
    "nodemon": "^3.1.11",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2"
  }
}
